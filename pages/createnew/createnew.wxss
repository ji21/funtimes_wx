.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.hide {
  display: none;
}

form {
  margin: 0rpx 0rpx 10rpx 0rpx;
  width: 95%;
  padding-bottom: 25rpx;
}

.create {
  margin-top: 10rpx;
  background-color: #3BE2AB;
  color: black;
  width: 100%!important;
  margin-left: 0rpx;
  margin-right: 0rpx;
  height:100rpx;
  padding-top:26rpx;
  font-weight: 400;
}

.title {
  margin: 0rpx 0rpx 8rpx 0rpx;
  height: 100rpx;
  padding-left: 8rpx;
}

.title > input {
  width: 95%;
  border-top-right-radius: 4rpx;
  border-bottom-right-radius: 4rpx;
  height: 100%;
  padding-left: 28rpx;
}

#white-space {
  width: 5%;
  background-color: white;
  border-top-left-radius: 4rpx;
  border-bottom-left-radius: 4rpx;
}

.search-bar {
  width: 95%;
  height: 83rpx;
  display: flex;
  background-color: white;
  align-items: center;
  margin-top: 10rpx;
  box-shadow: 1rpx 1rpx 4rpx rgb(226, 226, 226);
  border-radius: 10rpx;
  margin-right: 60rpx;
  margin-left: 60rpx;
}

.search-text {
  height: 116%;
  width: 79%;   
}

.search-bar > image {
  height: 75%;
  width: 10%;
  padding-left: 24rpx;
  opacity: 0.5;
}

#space {
  height: 100%;
  width: 4%;
}

picker {
  background-color: white;
  height: 100%;
  width: 352rpx;
  border-radius: 4rpx;
  box-sizing: border-box;
  padding-left: 80rpx;
  padding-top: 36rpx;
  padding-right: 58rpx;
  color: rgb(148, 145, 145);
}

.picker-div {
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.picker-div > view {
  height: 100%;
  padding-right: 48rpx;
  border-radius: 4rpx;
  text-align: center;
  box-sizing: border-box;
  padding-top: 25rpx;
  padding-left: 38rpx;
  color: rgb(138, 136, 136);
  margin: 8rpx;
}

.top {
  background-image: url(http://lc-z1O50gmk.cn-n1.lcfile.com/20fa3ff614abf1c5b4f5/skyline1.png);
  background-size: 100%;
  width: 100%;
  padding: 40rpx 10rpx;
  height: 24rpx;
}

#title {
  font-size: 28rpx;
  padding-left: 40rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  color: rgb(138, 136, 136);
  width: 100%;
}

#add-wrapper{
  width: 100%;
  background: white;
  height: 100rpx;
}

#add-show {
  width: 100%;
  background: white;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

#add-show > .details {
  height: 40rpx;
  width: 150rpx;
  font-size: 32rpx;
  margin-left: 87rpx;
  color:rgb(138, 136, 136);
  margin-right: 65rpx;
}

#add-show > button {
  font-weight: 400;
}

.alert {
  color: red;
  width: 90%;
  margin: 0 auto;
  margin-bottom: 20rpx;
}

.red {
  color: white!important;
  background-color: #f5584d!important;
}

.green {
  color:black!important;
  background-color: #3BE2AB!important;
}

.green-border {
  border: 5rpx solid #3BE2AB;
}

#card-container {

}

#search {
  width: 98%;
  background-color: rgb(52, 178, 252);
  height: 112rpx!important;
  margin-top: 10rpx!important;
  margin-bottom: 10rpx!important;
  padding-top: 28rpx;
  font-weight: 450;
}
