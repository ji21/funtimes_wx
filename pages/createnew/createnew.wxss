.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.hide {
  display: none;
}

form {
  margin: 0rpx 0rpx 10rpx 0rpx;
  width: 100%;
  padding-bottom: 25rpx;
}

.create {
  margin-top: 10rpx;
  background-color: #3BE2AB;
  color: white;
  width: 98%!important;
  margin-left: 0rpx;
  margin-right: 0rpx;
  height:100rpx;
  padding-top:26rpx;
  font-weight: 400;
}

.title {
  margin: 0rpx 40rpx 8rpx 0rpx;
  height: 100rpx;
  width: 99%;
}

.title > input {
  width: 95%;
  border-top-right-radius: 14rpx;
  border-bottom-right-radius: 14rpx;
  height: 100%;
}

#white-space {
  width: 5%;
  background-color: white;
  border-top-left-radius: 14rpx;
  border-bottom-left-radius: 14rpx;
}

.search-bar {
  width: 100%;
  height: 96rpx;
  display: flex;
  background-color: white;
  align-items: center;
  margin-top: 10rpx;
}

.search-text {
  height: 100%;
  width: 79%;
}

.search-bar > image {
  height: 75%;
  width: 10%;
  padding-left: 24rpx;
}

#space {
  height: 100%;
  width: 4%;
}

picker {
  background-color: white;
  height: 100%;
  width: 393rpx;
  border-radius: 4rpx;
  box-sizing: border-box;
  padding-left: 19rpx;
  padding-top: 24rpx;
  padding-right: 124rpx;
  color: rgb(148, 145, 145);
}

.picker-div {
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.picker-div > view {
  background: white;
  height: 100%;
  padding-right: 48rpx;
  border-radius: 4rpx;
  text-align: center;
  box-sizing: border-box;
  padding-top: 25rpx;
  padding-left: 38rpx;
  color: rgb(138, 136, 136);
  margin: 8rpx;
}

.top {
  background-image: url(/images/shanghai.png);
  background-size: 100%;
  width: 100%;
  padding: 40rpx 10rpx;
  height: 24rpx;
}

#title {
  font-size: 28rpx;
  padding-left: 40rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  color: rgb(138, 136, 136);
}

#add-wrapper{
  width: 100%;
  background: white;
  height: 100rpx;
}

#add-show {
  width: 100%;
  background: white;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

#add-show > .details {
  height: 40rpx;
  width: 150rpx;
  font-size: 32rpx;
  margin-left: 87rpx;
  color:rgb(138, 136, 136);
  margin-right: 65rpx;
}

#add-show > button {
  color:white!important;
  font-weight: 400;
}

.red {
  background-color: #f5584d!important;
}

.green {
  background-color: #3BE2AB!important;
}

.green-border {
  border: 5rpx solid #3BE2AB;
}

