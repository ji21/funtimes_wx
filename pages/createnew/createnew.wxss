.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.hide {
  display: none;
}

.bar {
  padding: 40rpx 10rpx;
  box-shadow: 10rpx 10rpx 10rpx white;
  background-image: url(http://lc-z1O50gmk.cn-n1.lcfile.com/e714b736334b7aea9566/wallbanner.jpg);
  background-size: 100%;
  }

form {
  margin: 10rpx 0rpx;
  width: 100%;
  background-color: #BFE8FF;
  box-shadow: 10rpx 10rpx 10rpx white;
  padding-bottom: 25rpx;
}

.create {
  margin-top: 24rpx;
}

.title {
  margin: 15rpx 40rpx 15rpx 5rpx;
  padding-top: 20rpx;
  height: 84rpx;
  width: 99%;
}

.title > input {
  width: 95%;
  border-top-right-radius: 14rpx;
  border-bottom-right-radius: 14rpx;
  height: 100%;
}

#white-space {
  width: 5%;
  background-color: white;
  border-top-left-radius: 14rpx;
  border-bottom-left-radius: 14rpx;
}

.search-bar {
  width: 100%;
  height: 120rpx;
  display: flex;
  background-color: white;
  align-items: center;
  margin-top: 10rpx;
  box-shadow: 2rpx 0rpx 30rpx rgb(148, 145, 145);
}

.search-text {
  height: 100%;
  width: 79%;
}

.search-bar > image {
  height: 75%;
  width: 13%;
  padding-left: 24rpx;
}

#space {
  height: 100%;
  width: 4%;
}

picker {
  background-color: white;
  height: 100%;
  width: 393rpx;
  border-radius: 14rpx;
  box-sizing: border-box;
  padding-left: 19rpx;
  padding-top: 24rpx;
  padding-right: 124rpx;
  color: rgb(148, 145, 145);
}

.picker-div {
  height: 91rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.picker-div > view {
  background: white;
  height: 100%;
  padding-right: 48rpx;
  border-radius: 14rpx;
  text-align: center;
  box-sizing: border-box;
  padding-top: 25rpx;
  padding-left: 38rpx;
  color: rgb(138, 136, 136);
}
