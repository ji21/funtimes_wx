.banner {
   height: 400rpx;
   width: 100%;
   border-radius: 15rpx;
   display: cover;
   background-image: url(http://lc-z1O50gmk.cn-n1.lcfile.com/99dc0e13b0c5161c6147/shanghai%20sun.jpg);
   background-size: 100%;
   box-shadow: 2rpx 2rpx 4rpx lightgrey;
}

.photo-box {
   position: relative;
   display: inline-block;
   
}

.hide {
   display: none;
}

.photo-box .title1{
   position: absolute;
   color: white;
   margin-top: 308rpx;
   margin-left: -331rpx;
   margin-right: 6rpx;
   text-shadow: black 2rpx 2rpx 25rpx;
   bottom: 38rpx;
}


.container .banner .weatherbox {
   background-color: #F6F6F6;
