@import '/stylesheets/index.wxss';
/**app.wxss**/
page {
  background: #F7F7F7;
}

.container {
  background: #F7F7F7;
  padding: 0;
  z-index: 1;
}

#line {
  position: fixed;
  bottom: 0;
  border: 5rpx solid #F7F7F7;
  width: 100%;
}

.top {
  background-image: url(http://lc-z1O50gmk.cn-n1.lcfile.com/e714b736334b7aea9566/wallbanner.jpg);
  background-size: 100%;
  width: 100%;
  padding: 40rpx 10rpx;
  height: 24rpx;
}

.header {
  text-align: center;
  position: fixed;
  top: 33rpx;
  color: white;
  left: 204rpx;
  font-weight: bold;
  background-color:#BFE8FF;
  padding: 12rpx 18rpx;
  border-radius: 20rpx;
}

.a-event-card {
  width: 100%;
  height: 284rpx;
  background-color: white;
  box-shadow: 2rpx 3rpx 7rpx rgb(212, 211, 211);
  margin-bottom: 15rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.a-event-card > image {
  /* border: 1px solid black; */
  height: 88%;
  width: 35%;
  border-radius: 10rpx;
  border-radius: 18rpx;
}

.info {
  display: flex;
  /* border: 1px solid black; */
  height: 88%;
  width: 60%;
  position: relative;
  flex-direction: column;
}

#heart {
  /* position: absolute;
  right: 10rpx;
  top: 80rpx; */
  width: 50rpx;
  height: 50rpx;
  z-index: 5;   
  margin-inline-end: 20rpx;
}

#event-name {
  width: 100%;
  /* border: 1px solid black; */
}

.first-div {
  /* border: 1px solid black; */
  width: 100%;
  display: flex;
  font-size: 20rpx;
  justify-content: flex-start;
  margin-top: 10rpx;
}

.category {
  background-color: #3BE2AB;
  padding: 5rpx 20rpx 2rpx 20rpx;
  border-radius: 20rpx;
  margin-inline-end: 12rpx;
}

.time {
  background-color: #3BE2AB;
  padding: 5rpx 20rpx 2rpx 20rpx;
  border-radius: 20rpx;
}

.second-div {
  height:42rpx;
  /* border: 1px solid black; */
  font-size: 22rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 16rpx;
}

#description {
  width: 100%;
  font-size: 24rpx;
  margin-top: 18rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  height: 86rpx;  
}


